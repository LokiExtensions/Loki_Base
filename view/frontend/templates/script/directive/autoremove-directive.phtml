<script>
    document.addEventListener('alpine:init', () => {
        Alpine.directive('autoremove', (el, { value, expression }, { evaluate }) => {
            if (expression) {
                const timeout = evaluate(expression);
                const messageText = el.getAttribute('data-message-text');
                setTimeout(() => {
                    Alpine.store('LokiMessageStore').removeMessage(messageText);
                }, timeout);
            }
        });
    });
</script>
